<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shamildev.retro">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name="com.shamildev.retro.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.signin.SignInActivity" android:label="@string/activity_signin"/>
        <activity android:name=".ui.account.AccountActivity" android:label="@string/activity_account"/>
        <activity android:name=".ui.firebaseui.FirebaseUiSignInActivity" android:label="@string/activity_account"/>
        <activity android:name=".ui.home.HomeActivity"  android:label="@string/activity_home"/>
        <activity android:name=".ui.register.RegisterActivity"  android:label="@string/activity_register"/>
        <activity android:name=".ui.watchlist.WatchlistActivity"  android:label="@string/activity_watchlist"/>
        <activity android:name=".ui.search.SearchActivity"  android:label="@string/activity_search"/>

    </application>

</manifest>